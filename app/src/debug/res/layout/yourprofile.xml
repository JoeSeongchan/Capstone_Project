<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/usernameback"
            android:text="홍길동"
            android:textColor="#333333"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="84dp"
            android:background="@drawable/usernameback"
            android:text="leejoo"
            android:textColor="#333333"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/album"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignBottom="@id/username"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="-286dp"
            android:src="@drawable/lilboi" />

        <ImageButton
            android:id="@+id/musicplay"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@id/album"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-77dp"
            android:src="@drawable/ic_audio_play" />

        <ImageView
            android:id="@+id/albumback"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@id/album"
            android:layout_centerHorizontal="true"
            android:src="@drawable/black5" />

        <TextView
            android:id="@+id/mainsinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/album"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="45dp"
            android:text="릴보이"
            android:textColor="#fff0f8ff"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/album"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="-CREDIT-"
            android:textColor="#fff0f8ff"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/profile"
            android:layout_width="406dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@id/musicplay"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-230dp"
            android:background="@drawable/usernameback"
            android:text="\n나이:\n성별:\n활동지역:\n선호하는 장르:\n"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/profilename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Profile"
            android:textColor="#333333"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/birthyear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="70dp"
            android:text="21"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/birthyear"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="3dp"
            android:text="남"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="3dp"
            android:text="강서구"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/local"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="3dp"
            android:text="힙합"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/evaluate"
            android:layout_width="406dp"
            android:layout_height="420dp"
            android:layout_below="@id/genre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/usernameback"
            android:text="참여한 모임 수 :"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/moimcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/evaluate"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="7dp"
            android:text="31"
            android:textColor="#333333"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/eval1"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="58dp"
            android:layout_below="@id/moimcount"
            android:background="@drawable/eval1"
            />

        <TextView
            android:id="@+id/eval1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="113dp"
            android:layout_alignBottom="@id/eval1"
            android:text="32"
            android:textColor="#333333"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/eval2"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="58dp"
            android:layout_below="@id/moimcount"
            android:layout_alignParentRight="true"
            android:background="@drawable/eval2"
            />

        <TextView
            android:id="@+id/eval2c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="113dp"
            android:layout_alignBottom="@id/eval2"
            android:text="32"
            android:textColor="#333333"
            android:textSize="30sp" />


        <ImageView
            android:id="@+id/eval3"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="58dp"
            android:layout_below="@id/eval1"
            android:background="@drawable/eval3"
            />

        <TextView
            android:id="@+id/eval3c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="113dp"
            android:layout_alignBottom="@id/eval3"
            android:text="32"
            android:textColor="#333333"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/eval4"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="58dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/eval2"
            android:background="@drawable/eval1"
            />

        <TextView
            android:id="@+id/eval4c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="113dp"
            android:layout_alignBottom="@id/eval4"
            android:text="32"
            android:textColor="#333333"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/favoritesongs"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/usernameback"
            android:text="\n1:릴보이 - CREDIT\n2:릴보이 - 내일이 오면\n3:\n4:\n5:"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/favoritesongsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluate"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="Favorite Songs"
            android:textColor="#333333"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/samplevoices"
            android:layout_width="406dp"
            android:layout_height="80dp"
            android:layout_below="@id/favoritesongs"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/usernameback"
            android:textColor="#333333"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/samplevoicetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/samplevoices"
            android:layout_alignTop="@id/samplevoices"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="샘플 보이스 더 듣기"
            android:textColor="#333333"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/seemore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/samplevoices"
            android:layout_alignBottom="@id/samplevoices"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="2dp"
            android:text="더보기"
            android:textColor="#333333"
            android:textSize="20sp" />


    </RelativeLayout>


</ScrollView>

